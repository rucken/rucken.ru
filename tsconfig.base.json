{
    "compileOnSave": false,
    "angularCompilerOptions": {
        "strictTemplates": false,
        "fullTemplateTypeCheck": false,
        "strictInjectionParameters": false,
        "disableTypeScriptVersionCheck": true,
        "enableIvy": true
    },
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2017", "dom"],
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@rucken/api-interfaces": ["libs/api-interfaces/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp", "**/**/*-e2e*", "**/*.spec.ts", "**/*.spec.tsx", "**/*.spec.js", "**/*.spec.jsx"]
}
